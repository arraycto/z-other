@import "./common/base.styl"
.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}

#app {
  .home {
    user-select: none;
    position: relative;
    width: 1920px;
    height: 1080px;
    background: url("../images/home/bg1.jpg") no-repeat center 0;
    .earth-box {
      @extend .center
      width: 720px;
      height: 720px;
      border-radius: 50%;
      .inner {
        position: relative;
        width: 100%;
        height: 100%;
        .earth {
          @extend .center
          width: 398px;
          height: 398px;
          background: url("../images/home/earth-bg.png") no-repeat 0 0;
          .earth-inner {
            @extend .center
            width: 396px;
            height: 396px;
            border-radius: 50%;
            overflow: hidden;
            background-repeat: repeat-x;
            background-image: url("../images/home/map2.png")
            background-position: 1px 0
            opacity: .7;
            animation: earth 20s linear infinite;
          }
        }
        .circle {
          @extend .center;
          img {
            display: block;
            &.c1 {
              animation: rotate1 5s cubic-bezier(.17, .67, .87, .45) infinite;
            }
            &.c2 {
              animation: rotate2 5s ease-in infinite;
            }
            &.c3 {
              animation: rotate3 5s ease-out infinite;
            }
            &.c4 {
              animation: rotate4 5s ease-in-out infinite;
            }
          }
        }
      }
    }
    .title {
      @extend .center
      background: url("../images/home/titlebg.png") no-repeat center 0;
    }
    .btn-group {
      position: absolute;
      left: 0;
      bottom: 100px;
      width: 100%;
      padding: 0 200px;
      box-sizing: border-box;
      display: flex;
      justify-content: space-between;
      align-items: center;
      > div {
        cursor: pointer;
        width: 340px;
        height: 102px;
        text-align: center;
        line-height: 102px;
        font-size: 32px;
        color: aliceblue;
        font-weight: 700;
        background: url("../images/home/menu-bg.png") no-repeat 0 0;
      }
    }

    @keyframes rotate1 {
      0% {
        transform: rotate(0deg)
        opacity: .4
      }
      50% {
        transform: rotate(180deg)
        opacity: 1;
      }
      100% {
        transform: rotate(0deg)
        opacity: .4
      }
    }
    @keyframes rotate2 {
      0% {
        transform: rotate(0deg)
        opacity: 1
      }
      50% {
        transform: rotate(-90deg)
        opacity: .4
      }
      100% {
        transform: rotate(0deg)
        opacity: 1
      }
    }
    @keyframes rotate3 {
      0% {
        transform: rotate(0deg)
        opacity: .4
      }
      50% {
        transform: rotate(160deg)
        opacity: .8
      }
      100% {
        transform: rotate(0deg)
        opacity: 1
      }
    }
    @keyframes rotate4 {
      0% {
        transform: rotate(0deg)
      }
      50% {
        transform: rotate(-180deg)
      }
      100% {
        transform: rotate(0deg)
      }
    }
    @keyframes earth {
      0% {
        background-position: 0 0
      }
      100% {
        background-position: -796px 0
      }
    }
  }
}

#app .bin-scrollbar__wrap {
  overflow-x: hidden;
}
