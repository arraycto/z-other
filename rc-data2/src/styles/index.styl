@import "./common/base.styl"
@import "./common/bin-ui.styl"
#app {
  .screen-wrapper {
    user-select: none;
    width: 3840px;
    height: 1080px;
    background: #02061a;
    .main {
      position: relative;
      height: calc(100% - 96px);
      padding: 20px 40px;
      .block1-1 {
        .total {
          width: 74px;
          padding-right: 10px;
          color: #fff;
          font-size: 16px;
          line-height: 1.4em;
        }
        .number span {
          color: #ddd088;
          font-size: 36px;
          line-height: 36px;
          display: inline-block;
          padding: 2px 10px;
          margin-right: 2px;
          background-color #232e4c;
        }
        .ren {
          padding: 22px 0 0 5px;
          font-size: 16px;
        }
        .box {
          width: 208px;
          margin-bottom: 2px;
          padding: 6px 20px;
          background-color #0f1432;
          h2 {
            font-size: 24px;
            color: #fff;
            font-weight: normal;
          }
        }
        > h2 {
          text-align: center;
          font-size: 18px;
          color: #d7edfd;
          font-weight: bold;
        }
        .charts {
          h2 {
            font-size: 16px;
            color: #fff;
            padding-top: 20px;
          }
          .item {
            line-height: 24px;
            .icon {
              display: inline-block;
              width: 10px;
              height: 10px;
              background-color #2d8cf0;
              border-radius: 50%;
              margin-right: 8px;
            }
            .label {
              display: inline-block;
              width: 80px;
            }
          }
        }
      }
      .block1-2 {
        padding-top: 20px;
        span {
          display: inline-block;
        }
        .number span {
          color: #ddd088;
          font-size: 36px;
          line-height: 36px;
          display: inline-block;
          padding: 2px 10px;
          margin-right: 2px;
          background-color #232e4c;
        }
        .num {
          padding: 10px 0 0 5px;
          font-size: 16px;
        }
        .item {
          display: inline-block;
          text-align: center;
          vertical-align: top;
          padding: 10px;
          height: 70px;
          line-height: 50px;
          background-color: #0f1432;
          &.icon {
            position: relative;
            height: 80px;
            text-align: left;
            padding-left: 80px;
            &:before {
              content: ''
              position: absolute;
              left: 20px;
              top: 20px;
              width: 40px;
              height: 40px;
              background-color #303b5a;
              border-radius: 50%;
            }
          }
          p {
            line-height: 1.5em;
          }
        }
      }
      .block1-3 {
        .top2 {
          margin-bottom 10px;
          .item {
            width: 48%;
            padding: 10px 30px;
            margin: 0 5px;
            background-color: #192648;
            border-radius: 6px;
            text-align: center;
          }
        }
      }
      .block1-4 {
        .top2 {
          margin-bottom 10px;
          .item {
            width: 48%;
            padding: 10px 30px;
            margin: 0 5px;
            background-color: #192648;
            border-radius: 6px;
            text-align: center;
          }
        }
      }
      .block1-5 {
        height: 850px;
        .table1 {
          position: relative;
          width: 100%;
          height: 100%;
          background: url("../images/level.png") center 80px no-repeat;
          .t {
            position: absolute;
            top: 20px;
            background: url("../images/biaoge-bg.png") center 0 no-repeat;
            height: 356px;
            width: 248px;
            h2 {
              font-weight: bold;
              padding-top: 15px;
            }
            ul {
              padding-top: 12px;
              li {
                line-height: 36px;
                border-bottom: 1px solid #181e3c;
                &:last-child {
                  border-bottom: none;
                }
                span {
                  display: inline-block;
                  width: 50%;
                  height: 100%;
                  text-align: center;
                  &:first-child {
                    border-right: 1px solid #181e3c;
                  }
                }
              }
            }
          }
        }
        .table2 {
          width: 100%;
          height: 100%;
          padding: 0 80px;
          background: url("../images/foot.png") center bottom no-repeat;
          > h2 {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            color: #00ccff;
            line-height: 50px;
            background: url("../images/title-bg.png") center bottom no-repeat;
          }
        }
      }
    }
  }
}

#app .bin-scrollbar__wrap {
  overflow-x: hidden;
}



