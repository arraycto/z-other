@import "./common/base.styl"
#app {
  .screen-wrapper {
    user-select: none;
    width: 3840px;
    height: 1080px;
    background: #02061a;
    .main {
      position: relative;
      height: calc(100% - 96px);
      padding: 20px 40px;
      .block1 {
        .total {
          width: 74px;
          padding-right: 10px;
          color: #fff;
          font-size: 16px;
        }
        .number span {
          color: #ddd088;
          font-size: 36px;
          line-height: 36px;
          display: inline-block;
          padding: 5px 10px;
          margin-right: 2px;
          background-color #232e4c;
        }
        .ren {
          padding: 25px 0 0 5px;
          font-size: 16px;
        }
        .box {
          width: 208px;
          margin-bottom: 2px;
          padding: 6px 20px;
          background-color #0f1432;
          h2 {
            font-size: 24px;
            color: #fff;
            font-weight: normal;
          }
        }
        > h2 {
          text-align: center;
          font-size: 18px;
          color: #d7edfd;
          font-weight: bold;
        }
        .charts {
          h2 {
            font-size: 16px;
            color: #fff;
            padding-top: 20px;
          }
          .item {
            line-height: 24px;
            .icon {
              display: inline-block;
              width: 10px;
              height: 10px;
              background-color #2d8cf0;
              border-radius: 50%;
              margin-right: 8px;
            }
            .label {
              display: inline-block;
              width: 80px;
            }
          }
        }
      }
    }
  }
}
.echarts {
  width: 100%;
  height: 100%;
}

