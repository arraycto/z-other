.main {
  .menu-header {
    position: relative;
    width: 100%;
    height: 202px;
    background: url("../images/header2.png") no-repeat 0 0;
    .info {
      position: absolute;
      top: 35px;
      left: 910px;
      width: 970px;
      height: 100px;
      .title {
        width: 500px;
        font-size: 44px;
        font-weight: bold;
        color: #bed4ff;
        padding-left: 90px;
        padding-top: 10px;
        background: url("../images/button-icon1.png") no-repeat 0 0;
        background-size: 70px 70px;
      }
      .ctrl {
        span {
          width: 96px;
          height: 96px;
          display: inline-block;
          margin: 0 10px;
          cursor: pointer;
          border-radius: 50%;
          &.back {
            background: url("../images/back.png") no-repeat 0 0;
          }
          &.home {
            background: url("../images/home.png") no-repeat 0 0;
          }
        }
      }
    }
  }
}
